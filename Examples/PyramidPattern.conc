//Program that prints pyramid pattern to the console

val rows = 5
var k = 0

//loop variables
var i = 0
var space = 0

for (i = 1; i <= rows; i++){
  for (space = 1; space <= rows - i; space++){
    System out print "  "
  }
  
  while ( k != 2 * i - 1){
    System out print "* "
    ++k
  }
  
  System out println
  k = 0
}

